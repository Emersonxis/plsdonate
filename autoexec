-- ✅ CONFIGURAÇÃO DO TELEPORTE (edite aqui se quiser trocar o servidor)
local placeId = 17503543197
local jobId = "7eb64779-c1bd-4cf1-b1c5-da1c7da9cbed" -- <--- NOVO ID DO SERVIDOR

-- 🚀 TELEPORTE AUTOMÁTICO (somente se não estiver no servidor atual)
task.spawn(function()
    local TeleportService = game:GetService("TeleportService")
    local currentJobId = game.JobId

    if currentJobId ~= jobId then
        local success, err = pcall(function()
            TeleportService:TeleportToPlaceInstance(placeId, jobId, game.Players.LocalPlayer)
        end)
        if not success then
            warn("Falha ao teleportar:", err)
        end
    else
        warn("Já está no servidor desejado, pulando teleport...")
    end
end)

-- ⏳ DELAY PARA CARREGAR O SCRIPT DO EVENTO DEPOIS DO TELEPORTE (ou direto, se já estiver no servidor)
task.spawn(function()
    task.wait(10)
    pcall(function()
        -- ⚙️ CONFIG DO AutoSummerEvent
        getgenv().AutoSummerEvent = {
            ["_GEnabled"] = true,

            ["_GWebhookID"] = "426889632488095754",
            ["_GWebhookURL"] = "https://discord.com/api/webhooks/1257767230242820116/tVrRuIGGCfMYMZQIxMvL8n9AATDYIWtfzeomCRIwnWLtyiUBmxwYAe9aj3NcmelUfZNW",

            ["_GOptimizationsLastestVersion"] = true,
            ["_GOptimizationsStatUI"] = true,
            ["_GOptimizationAutoRejoin"] = nil,

            ["_GAutoServerHop"] = true,
            ["_GAutoServerHopEggChance"] = {"100x"},

            ["_GAutoTiles"] = true,
            ["_GTilesDelay"] = 1,

            ["_GAutoRewards"] = true,
            ["_GRewardsDelay"] = 20,

            ["_GAutoRaffle"] = true,
            ["_GRaffleAmount"] = 10,

            ["_GHatchStopIslandProgress"] = 95,
            ["_GHatchEggs"] = true,
            ["_GHatchDelay"] = 0.2,

            ["_GAutoRebirth"] = false,
            ["_GRebirthDelay"] = 120,
            ["_GSkipRebirthOnNormalEgg"] = {"100x"},
            ["_GSkipRebirthOnTitanicEgg"] = {"100x"},
            ["_GSkipRebirthOnSelectedTitanicEggs"] = {"Five", "Six", "Seven", "Eight"},

            ["_GEggScanInterval"] = 1,
            ["_GAutoTeleportToOthersEggs"] = true,
            ["_GAutoTeleportToBestEgg"] = true,
            ["_GAutoTeleportToBestTitanicEgg"] = true,
            ["_GAutoTeleportToBestSelectedTitanicEggs"] = {"Five", "Six", "Seven", "Eight"},
        }

        -- 🔁 Carrega o script principal do evento
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Sub2BK/Stratum/refs/heads/Scripts/PS99_Event.lua"))()
    end)
end)

-- 🛡️ ANTI-LOG PARA DESLIGAR O CONSOLE
task.spawn(function()
    task.wait(4)
    for i, v in pairs(getconnections(game.LogService.MessageOut)) do
        pcall(function()
            v:Disconnect()
        end)
    end
end)
