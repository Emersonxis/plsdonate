local fastAutoFarmButton = Instance.new("TextButton", frame) -- Bot√£o para fast auto farm
local closeButton = Instance.new("TextButton", frame)
local titleLabel = Instance.new("TextLabel", frame)

-- Vari√°veis de controle
local isFarming = false
local isFastAutoFarming = false -- Vari√°vel para fast auto farm
local SelectedArea = "Hacker Portal"
local Library = require(game:GetService("ReplicatedStorage").Framework.Library)

-- Configura√ß√µes da GUI
frame.Size = UDim2.new(0, 150, 0, 200) -- Tamanho da GUI
frame.Position = UDim2.new(0.5, -75, 0.5, -100) -- Posi√ß√£o da GUI
frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.BackgroundTransparency = 0.1

-- T√≠tulo da GUI
titleLabel.Size = UDim2.new(1, 0, 0.15, 0)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.Text = "üëæFrancesSüëæ"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.BackgroundTransparency = 1
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextSize = 14

-- Campo para o nome da √°rea de farm
areaNameInput.Size = UDim2.new(0.9, 0, 0.15, 0)
areaNameInput.Position = UDim2.new(0.05, 0, 0.15, 0)
areaNameInput.PlaceholderText = "Nome da √Årea"
