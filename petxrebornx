toggleFarmButton.TextColor3 = Color3.new(1, 1, 1)
toggleFarmButton.Font = Enum.Font.GothamBold
toggleFarmButton.TextSize = 10
toggleFarmButton.BorderSizePixel = 0

-- Bot√£o de fast auto farm
fastAutoFarmButton.Size = UDim2.new(0.9, 0, 0.15, 0)
fastAutoFarmButton.Position = UDim2.new(0.05, 0, 0.45, 0)
fastAutoFarmButton.Text = "Fast Auto Farm"
fastAutoFarmButton.BackgroundColor3 = Color3.fromRGB(50, 205, 50)
fastAutoFarmButton.TextColor3 = Color3.new(1, 1, 1)
fastAutoFarmButton.Font = Enum.Font.GothamBold
fastAutoFarmButton.TextSize = 10
fastAutoFarmButton.BorderSizePixel = 0

-- Fun√ß√£o para obter os pets equipados
local function GetMyPets()
    local returntable = {}
    local equippedPets = Library.PetCmds.GetEquipped()
    for _, v in pairs(equippedPets) do
        table.insert(returntable, v.uid)
    end
    return returntable
end

-- Fun√ß√£o para farmar em um coin espec√≠fico com todos os pets
local function FarmCoin(CoinID, Pets)
    Library.Network.Invoke("Join Coin", CoinID, Pets)
    for _, pet in ipairs(Pets) do
        Library.Network.Fire("Farm Coin", CoinID, pet)
    end
end

-- Fun√ß√£o de auto farm ajustada
local function autoFarm()
    while isFarming do
        SelectedArea = areaNameInput.Text ~= "" and areaNameInput.Text or "Hacker Portal"
        local petsEquip = GetMyPets()
        local coinsToFarm = {}

        for _, g in pairs(workspace.__ITEMS.Coins:GetChildren()) do
            if not isFarming then return end
            if g:IsA("Folder") and g:GetAttribute("Area") == SelectedArea then
                table.insert(coinsToFarm, g)
            end
        end

        for _, coin in ipairs(coinsToFarm) do
            if not isFarming then return end
            FarmCoin(coin.Name, petsEquip)
            repeat
                wait(0.1)
            until not workspace.__ITEMS.Coins:FindFirstChild(coin.Name) or not isFarming
        end

        if not isFarming then break end
        wait(0.5)
    end
end

-- Fun√ß√£o de fast auto farm
local function fastAutoFarm()
    while isFastAutoFarming do
        SelectedArea = areaNameInput.Text ~= "" and areaNameInput.Text or "Hacker Portal"
        local petsEquip = GetMyPets()
        local coinsToFarm = {}

        for _, g in pairs(workspace.__ITEMS.Coins:GetChildren()) do
            if not isFastAutoFarming then return end
            if g:IsA("Folder") and g:GetAttribute("Area") == SelectedArea then
                table.insert(coinsToFarm, g)
            end
        end

        for _, coin in ipairs(coinsToFarm) do
            if not isFastAutoFarming then return end
            FarmCoin(coin.Name, petsEquip)
            wait(0.1) -- Short delay between sending pets
        end

        if not isFastAutoFarming then break end
        wait(0.5)
    end
end

-- Evento do bot√£o de farm
toggleFarmButton.MouseButton1Click:Connect(function()
    isFarming = not isFarming
    toggleFarmButton.Text = isFarming and "Desativar Farm" or "Ativar Farm "
    toggleFarmButton.BackgroundColor3 = isFarming and Color3.fromRGB(220, 20, 60) or Color3.fromRGB(50, 205, 50)

    if isFarming then
        spawn(autoFarm)
    end
end)

-- Evento do bot√£o de fast auto farm
fastAutoFarmButton.MouseButton1Click:Connect(function()
    isFastAutoFarming = not isFastAutoFarming
    fastAutoFarmButton.Text = isFastAutoFarming and "Desativar Fast Auto Farm" or "Ativar Fast Auto Farm"
    fastAutoFarmButton.BackgroundColor3 = isFastAutoFarming and Color3.fromRGB(220, 20, 60) or Color3.fromRGB(50, 205, 50)

    if isFastAutoFarming then
        spawn(fastAutoFarm)
    end
end)

-- Bot√£o de fechar
closeButton.Size = UDim2.new(0.1, 0, 0.1, 0)
closeButton.Position = UDim2.new(0.9, -10, 0, 5)
closeButton.Text = "X"
closeButton.BackgroundColor3 = Color3.fromRGB(255, 69, 58)
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 10
closeButton.BorderSizePixel = 0

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Fun√ß√£o para coletar orbs instantaneamente
function AutoCollectOrbs()
    while true do
        -- Obt√©m todas as orbs no espa√ßo de trabalho
        local orbs = workspace.__ITEMS.Orbs:GetChildren()  -- Local correto das orbs
        for _, orb in ipairs(orbs) do
            -- Prepara os argumentos para a coleta da orb
            local args = {
                [1] = {
                    [1] = {
                        [1] = orb.Name  -- Mant√©m o nome da orb que est√° sendo coletada
                    }
                }
            }
            -- Tenta coletar a orb
            pcall(function()
                workspace.__ITEMS.Remotes:FindFirstChild("claim orbs"):FireServer(unpack(args))
            end)
        end
        wait(0.05)  -- Intervalo para a pr√≥xima verifica√ß√£o
    end
end

-- Fun√ß√£o para teleporte de lootbags
function AutoTeleportLootbags()
    while task.wait() do
        for _, lootbag in pairs(workspace.__ITEMS.Lootbags:GetChildren()) do
            -- Teleporta a lootbag para uma posi√ß√£o ligeiramente abaixo da cabe√ßa do jogador
            local headPosition = player.Character.HumanoidRootPart.Position
            lootbag.Position = Vector3.new(headPosition.X, headPosition.Y - 10, headPosition.Z)
        end
    end
end

-- Inicia as fun√ß√µes de coleta de orbs e teleporte de lootbags
spawn(AutoCollectOrbs)
spawn(AutoTeleportLootbags)
