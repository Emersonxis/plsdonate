-- Fun√ß√£o para obter os pets equipados
local function GetMyPets()
    local returntable = {}
    local equippedPets = Library.PetCmds.GetEquipped()
    for _, v in pairs(equippedPets) do
        table.insert(returntable, v.uid)
    end
    return returntable
end

-- Fun√ß√£o para farmar em um coin espec√≠fico com todos os pets
local function FarmCoin(CoinID, Pets)
    Library.Network.Invoke("Join Coin", CoinID, Pets)
    for _, pet in ipairs(Pets) do
        Library.Network.Fire("Farm Coin", CoinID, pet)
    end
end

-- Fun√ß√£o para comprar o egg com o novo Remote
local function buyEgg()
    local args = {
        [1] = {
            [1] = {
                [1] = eggNameInput.Text, -- nome do Egg obtido no GUI
                [2] = true -- Abre o egg com anima√ß√£o
            },
            [2] = {
                [1] = false,
                [2] = false
            }
        }
    }
    workspace.__ITEMS.__REMOTES:FindFirstChild("buy egg"):InvokeServer(unpack(args))
end

-- Loop de compra de eggs
local function purchaseLoop()
    while isBuying do
        buyEgg()
        wait()
    end
end

-- Evento do bot√£o de compra de eggs
toggleEggButton.MouseButton1Click:Connect(function()
    isBuying = not isBuying
    toggleEggButton.Text = isBuying and "Parar Compra" or "Iniciar Compra"
    toggleEggButton.BackgroundColor3 = isBuying and Color3.fromRGB(255, 0, 0) or Color3.fromRGB(50, 205, 50)
    if isBuying then
        purchaseLoop()
    end
end)

-- Evento do bot√£o de farm
toggleFarmButton.MouseButton1Click:Connect(function()
    isFarming = not isFarming
    toggleFarmButton.Text = isFarming and "Parar Farm" or "Ativar Farm"
    toggleFarmButton.BackgroundColor3 = isFarming and Color3.fromRGB(255, 0, 0) or Color3.fromRGB(50, 205, 50)
    if isFarming then
        while isFarming do
            local pets = GetMyPets()
            FarmCoin(SelectedArea, pets)
            wait(0.5) -- Espera um pouco antes de reiniciar
        end
    end
end)

-- Evento do bot√£o de fechar
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Fun√ß√µes para abrir as GUIs com os Remotes corretos
goldenButton.MouseButton1Click:Connect(function()
    game:GetService("Players").LocalPlayer.PlayerGui.Golden.Enabled = true -- Abre a GUI Golden
end)

rainbowButton.MouseButton1Click:Connect(function()
    game:GetService("Players").LocalPlayer.PlayerGui.Rainbow.Enabled = true -- Abre a GUI Rainbow
end)

