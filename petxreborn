-- Fun√ß√£o de compra de eggs
local function buyEgg()
    if not isBuying then
        isBuying = true
        while isBuying do
            local eggName = eggNameInput.Text
            if eggName ~= "" then
                local egg = Library.GetEgg(eggName)
                if egg then
                    Library.BuyEgg(egg)
                    task.wait(0.2) -- Ajuste o intervalo
                else
                    print("Egg n√£o encontrado!")
                end
            else
                print("Insira o nome do egg!")
            end
            task.wait(0.2) -- Ajuste o intervalo
        end
    end
end

-- Fun√ß√£o de farm
local function farm()
    if not isFarming then
        isFarming = true
        while isFarming do
            SelectedArea = areaNameInput.Text ~= "" and areaNameInput.Text or "Hacker Portal"
            local coinsToFarm = {}

            for _, g in pairs(workspace.__ITEMS.Coins:GetChildren()) do
                if not isFarming then return end
                if g:IsA("Folder") and g:GetAttribute("Area") == SelectedArea then
                    table.insert(coinsToFarm, g)
                end
            end

            for _, coin in ipairs(coinsToFarm) do
                if not isFarming then return end
                FarmCoin(coin.Name)
                task.wait(0.2) -- Ajuste o intervalo
            end

            if not isFarming then break end
            task.wait(0.2) -- Ajuste o intervalo
        end
    end
end

-- Fun√ß√£o de fast auto farm
local function fastAutoFarm()
    if not isFastAutoFarming then
        isFastAutoFarming = true
        while isFastAutoFarming do
            SelectedArea = areaNameInput.Text ~= "" and areaNameInput.Text or "Hacker Portal"
            local petsEquip = GetMyPets()
            local coinsToFarm = {}

            for _, g in pairs(workspace.__ITEMS.Coins:GetChildren()) do
                if not isFastAutoFarming then return end
                if g:IsA("Folder") and g:GetAttribute("Area") == SelectedArea then
                    table.insert(coinsToFarm, g)
                end
            end

            for _, coin in ipairs(coinsToFarm) do
                if not isFastAutoFarming then return end
                FarmCoin(coin.Name, petsEquip)
                task.wait(0.2) -- Ajuste o intervalo
            end

            if not isFastAutoFarming then break end
            task.wait(0.2) -- Ajuste o intervalo
        end
    end
end

-- Eventos de bot√µes
toggleEggButton.MouseButton1Click:Connect(buyEgg)
toggleFarmButton.MouseButton1Click:Connect(farm)
fastAutoFarmButton.MouseButton1Click:Connect(fastAutoFarm)
closeButton.MouseButton1Click:Connect(function()
    frame:Destroy()
end)


-- Vari√°veis principais
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local player = Players.LocalPlayer

-- Fun√ß√£o para coletar orbs instantaneamente
function AutoCollectOrbs()
    while true do
        -- Obt√©m todas as orbs no espa√ßo de trabalho
        local orbs = Workspace.__ITEMS.Orbs:GetChildren()  -- Local correto das orbs
        for _, orb in ipairs(orbs) do
            -- Prepara os argumentos para a coleta da orb
            local args = {
                [1] = {
                    [1] = {
                        [1] = orb.Name  -- Mant√©m o nome da orb que est√° sendo coletada
                    }
                },
                [2] = {
                    [1] = false
                }
            }
            -- Tenta coletar a orb
            pcall(function()
                Workspace.__ITEMS.__REMOTES:FindFirstChild("claim orbs"):FireServer(unpack(args))
            end)
        end
        task.wait(0.2) -- Aumente o intervalo
    end
end

-- Fun√ß√£o para teleporte de lootbags
function AutoTeleportLootbags()
    while task.wait() do
        for _, lootbag in pairs(Workspace.__ITEMS.Lootbags:GetChildren()) do
            -- Teleporta a lootbag para uma posi√ß√£o ligeiramente abaixo da cabe√ßa do jogador
            local headPosition = player.Character.HumanoidRootPart.CFrame * CFrame.new(0, -1, 0)
            lootbag.CFrame = headPosition
        end
    end
end

-- Inicia as fun√ß√µes de auto-collect de orbs e teleporte de lootbags
spawn(AutoCollectOrbs)
spawn(AutoTeleportLootbags)
